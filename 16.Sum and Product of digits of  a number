#include <iostream>
using namespace std;

int main() {
    int n,i,a[100],sum=0,product=1;
    
    cout<<"Enter number of digits"<<endl;
    cin>>n;
    
    cout<<"Enter the "<<n<<" "<<"digit number with a space in between each digit"<<endl;
    
    for(int i=0; i<n; i++)
     {
         cin>>a[i];
         
     }
     
     for(int i=0; i<n; i++)
     {
     //cout<<a[i];
     sum=sum+a[i];
     product=product*a[i];
     }
     cout<<"Sum = "<<sum<<endl;
     cout<<"Product = "<<product;
     
    return 0;
}
